[{
    "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
    "name": "Condition",
    "id": "example.com.condition",
    "description": "A conditional template.",
    "appliesTo": [
      "bpmn:Task"
    ],
    "properties": [
      {
        "id": "input1",
        "label": "input 1",
        "type": "String",
        "binding": {
          "type": "zeebe:taskHeader",
          "key": "url"
        }
      },
      {
        "label": "input 2",
        "value": "",
        "type": "String",
        "binding": {
          "type": "zeebe:input",
          "name": "body"
        },
        "condition":{
          "property": "input1",
          "oneOf": ["foo", "bar"]
        }
      },
      {
        "label": "input 3",
        "value": "",
        "type": "String",
        "binding": {
          "type": "zeebe:output",
          "source": "= body"
        },
        "condition":{
          "property": "input1",
          "equals": "foo"
        }
      }
    ]
  }]