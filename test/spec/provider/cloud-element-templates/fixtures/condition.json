{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "Condition",
  "id": "example.com.condition",
  "description": "A conditional template.",
  "appliesTo": ["bpmn:Task"],
  "properties": [
    {
      "id": "parentProperty",
      "label": "name",
      "type": "String",
      "binding": {
        "type": "property",
        "name": "name"
      }
    },
    {
      "id": "otherProperty",
      "label": "property",
      "type": "String",
      "value": "default value",
      "binding": {
        "type": "property",
        "name": "customProperty"
      },
      "condition": {
        "property": "parentProperty",
        "equals": "foo"
      }
    },
    {
      "label": "name",
      "value": "someValue",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      },
      "condition": {
        "property": "parentProperty",
        "equals": "foo"
      }
    },
    {
      "label": "zeebe:input",
      "value": "",
      "type": "String",
      "binding": {
        "type": "zeebe:input",
        "name": "body"
      },
      "condition": {
        "property": "parentProperty",
        "oneOf": ["foo", "bar"]
      }
    },
    {
      "label": "zeebe:output",
      "value": "",
      "type": "String",
      "binding": {
        "type": "zeebe:output",
        "source": "= body"
      },
      "condition": {
        "property": "parentProperty",
        "equals": "foo"
      }
    },
    {
      "label": "zeebe:taskHeader",
      "value": "",
      "type": "String",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "someOtherKey"
      },
      "condition": {
        "property": "parentProperty",
        "equals": "foo"
      }
    },
    {
      "label": "invalid condition",
      "value": "",
      "type": "String",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "someOtherKey"
      },
      "condition": {
        "property": "invalid",
        "equals": "foo"
      }
    },
    {
      "label": "zeebe:property",
      "value": "",
      "type": "String",
      "binding": {
        "type": "zeebe:property",
        "name": "someName"
      },
      "condition": {
        "property": "parentProperty",
        "equals": "foo"
      }
    },
    {
      "label": "invalid condition",
      "value": "",
      "type": "String",
      "binding": {
        "type": "zeebe:property",
        "name": "someOtherName"
      },
      "condition": {
        "property": "invalid",
        "equals": "foo"
      }
    }
  ]
}
